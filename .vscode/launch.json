{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug @io/vehicle-app with Nx",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "serve", "@io/vehicle-app"],
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/apps/vehicle-app/dist/**/*.(m|c|)js",
        "!**/node_modules/**"
      ]
    },
    {
